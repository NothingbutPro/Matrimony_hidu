<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ics.hindu.matrimony.fragment.registration.PersonalDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_margin_txt_top_10"
        android:paddingRight="@dimen/login_margin_txt_top_10">

        <LinearLayout
            android:id="@+id/ll_gender_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_margin_txt_top_5"
                android:layout_marginTop="@dimen/login_margin_txt_top_10"
                android:maxLines="1"
                android:text="@string/gender1"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/rg_gender_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_margin_txt_top_10"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_gender_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/female"
                    android:textColor="@drawable/app_radio_button_selector"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_gender_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/male"
                    android:textColor="@drawable/app_radio_button_selector"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>
        <ics.hindu.matrimony.view.InputFieldView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:hint="">

            <ics.hindu.matrimony.view.CustomEditText
                android:id="@+id/emailedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail" />
        </ics.hindu.matrimony.view.InputFieldView>


        <ics.hindu.matrimony.view.InputFieldView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:hint="">

            <ics.hindu.matrimony.view.CustomEditText
                android:id="@+id/passwedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />
        </ics.hindu.matrimony.view.InputFieldView>
            <Spinner
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:id="@+id/proffor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ics.hindu.matrimony.view.InputFieldView
            android:layout_weight="1"
            android:id="@+id/fis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:hint="">

            <ics.hindu.matrimony.view.CustomEditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name" />
        </ics.hindu.matrimony.view.InputFieldView>

        <ics.hindu.matrimony.view.InputFieldView
            android:layout_weight="1"
            android:id="@+id/las"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:hint="">

            <ics.hindu.matrimony.view.CustomEditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name" />
        </ics.hindu.matrimony.view.InputFieldView>
        </LinearLayout>
        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_txt_top_5"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:maxLines="1"
            android:text="Gender" />

            <Spinner
                android:layout_marginTop="20dp"
                android:id="@+id/genspin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_txt_top_5"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:maxLines="1"
            android:text="Date of Birth" />
       <LinearLayout
            android:weightSum="3"
          android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

            <Spinner
                android:layout_weight="1"

                android:id="@+id/dateob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />




            <Spinner
                android:layout_weight="1"

                android:id="@+id/datebm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />




            <Spinner
                android:layout_weight="1"

                android:id="@+id/dateoby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />

       </LinearLayout>
        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_txt_top_5"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:maxLines="1"
            android:text="Religion" />
        <Spinner
            android:layout_weight="1"
            android:id="@+id/religion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />
        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_txt_top_5"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:maxLines="1"
            android:text="Mother Tongue" />
        <Spinner
            android:layout_weight="1"
            android:id="@+id/mothertong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />

        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_txt_top_5"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:maxLines="1"
            android:text="Living in" />

        <Spinner
            android:layout_weight="1"
            android:id="@+id/livein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />
        >

        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_txt_top_5"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:maxLines="1"
            android:text="@string/reg_indicates_personel" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>